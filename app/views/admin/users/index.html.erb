<div class="container">
  <div class="row">
    <h1>Users</h1>
    <table class="table table-dark table-sm">
      <thead>
        <tr>
          <th>User ID</th>
          <th>User name</th>
          <th>Band</th>
          <th>status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.user_name, admin_user_path(user) %></td>
          <td><%= user.band.band_name %></td>
          <td><%= user.is_active %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>