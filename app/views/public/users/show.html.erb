<div class="container">

  <div class="modal fade" id="user-modal"></div>

  <div class="row">
    <div class="col-sm-4 text-center">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.png", size: "100x100", class:"rounded-circle" %>
    </div>
  　<div class="col-sm-4">
  　   <table>
        <tbody>
          <tr>
            <td><%= User.human_attribute_name(:user_name)%></td>
            <td> : <%= @user.user_name%></td>
          </tr>
          <tr>
            <td><%= User.human_attribute_name(:email)%></td>
            <td> : <%= @user.email%></td>
          </tr>
          <tr>
            <td><%= Band.human_attribute_name(:band_name)%></td>
            <td> : <%= @band.band_name%></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-1">

    </div>
    <div class="col-sm-2">
      <% if @user == current_user %>
        <%= link_to "Edit",edit_mypage_path(@user), remote: true, class: "btn btn-lg, btn-primary" %>
      <% else %>
        <%= render 'public/relationships/follow_button', band: @band %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= form_with model:@article,local:true do |f| %>
      <div class="form-group">
        <%= f.label :content, @band_name %>
        <%= f.text_area :content, class:"form-control" %>
        <%= f.hidden_field :band_id, :value => @band.id %>
      </div>
      <%= f.submit "投稿", class:"btn btn-primary"%>
      <% end %>
    </div>

    <div class="col-9">
      <div class="card-list">
          <% @articles.each do |article| %>
            <%= link_to article_path(article), class:"card-link" do%>
            <div class="card w-auto mx-auto mt-4 shadou-lg">
              <div class="card-body row">
                <div class="col-2">
                  <%= attachment_image_tag article.band.user, :profile_image, size: "60x60" , fallback: "no_image.png" ,
                    size: "60x60" , class:"mt-2 rounded-circle"%>
                </div>
                <div class="col-10">
                  <div class="row">
                    <%= article.band.band_name%>
                  </div>
                  <div class="row">
                    <%= article.content%>
                  </div>
                  <span>
                    <%= article.comments.count %>コメント
                  </span>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
          <%= paginate @articles %>
      </div>
    </div>
  </div>
</div>