<div class="container">
    <div class="prev"></div>
    <div class="sliderbox">
        <ul class="sliderlist">
          <li class="sliderlist__item sliderlist__item1"><%= image_tag 'live1.jpg', width: '100%', height: '100%' %></li>
          <li class="sliderlist__item sliderlist__item2"><%= image_tag 'live2.jpg', width: '100%', height: '100%' %></li>
          <li class="sliderlist__item sliderlist__item3"><%= image_tag 'live3.jpg', width: '100%', height: '100%' %></li>
        </ul>
    </div>
    <div class="next"></div>
</div>


<section id="modal" class="hidden">
  <div id="registrations">
  <div id="registrations-new" >
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div>
          <%= link_to 'Guset Login（閲覧用）', user_guest_sign_path, method: :post %>
        </div>

        <div>
          <%= f.submit "Log in" %>
        </div>

      <%= render "devise/users/shared/links" %>

      <% end %>
    </div>
  </div>
</div>

  <div id="close">
    閉じる
  </div>
</section>

<div id="mask" class="hidden"></div>



<% @lives.each do |live| %>
  <div class="card-list mx-auto">
    <div class="col-md-2 col-sm-5">
      <div class="card my-3" style="width: 15rem;">
        <%= link_to life_path(live) do %>
          <%= attachment_image_tag live, :live_image, size: "180x100", fallback: "no_image.png", size: "100%x100%", class:"card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= live.live_name %></h5>
          <p class="card-text"><%= host_band(live).band_name %></p>
          <p class="card-text"><%= live.introduction.truncate(10) %></p>
          <%= link_to "Live info",life_path(live),class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
